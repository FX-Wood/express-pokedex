<%                        function spit(data) { %>
<%                            if (i < 10000) { %>
<%                                if (typeof data !== 'object') { %>
                                    <span class="v"> <%= data %> </span>
<%                                } else { %>
                                      </div><div class=" <%= 'div' + d + ' ' + classPicker(d) %>">
<%                                    d++    %>
<%                                    if (Array.isArray(data) && data.length > 0) { %>
                                          <ul class ="list-group">
<%                                        data.forEach(item => { %>
<%                                            if (typeof item.flavor_text === 'undefined') { %>
                                                    <li class="list-group-item">
<%                                                spit(item) %>
                                                    </li>
<%                                            } else { %>
<%                                                (item.language.name === 'en'? spit(item) : '') %>
<%                                            } %>
<%                                        }) %>
                                          </ul>
<%                                    } else { %>
<%                                        for (let key in data) { %>
<%                                            if (key !== 'url' && key !== 'version_group_details' && key !== 'sprites' && key !== 'language') { %> 
                                                    <%- spanPicker(d, key) %>
<%                                                spit(data[key]) %>
<%                                            } %>
<%                                             %>
<%                                        } %>
<%                                    } %>
                                    </div><div class="test">
<%                                  d-- %>
<%                                } %>
<%                                console.log(i++) %>
<%                            } %>
<%                         }%>
