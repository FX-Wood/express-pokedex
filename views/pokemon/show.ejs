
<%  
function classPicker(depth) { 
    switch(depth) {               
        case 0:                     
            return 'card card-body';            
        case 1:                     
            return 'well';
        case 2:
            return 'card'
        default:                    
            return 'card';            
    }                             
  }                               %>
<%
function spanPicker(depth, rawText) {
    let text = rawText.replace('_', ' ')
    if (text) {
        switch(depth) {
            case 1:
                return `<h3 class=${'c' + depth + ' card-title'}> ${(text === 'name' || text === 'flavor_text') ? '' : text} </h3>`
            case 2:
                return `<h4 class=${'c' + depth + ' card-subtitle'}> ${(text === 'name' || text === 'flavor_text') ? '' : text} </h4>`
            case 3:
                `<span class=${'c' + depth + ' card-text'}> ${(text === 'name' || text === 'flavor_text') ? '' : text} </span>`
            default:
                return `<span class=${'c' + depth + ' card-text'}> ${(text === 'name' || text === 'flavor_text') ? '' : text} </span>`
        }
    }
}

%>

