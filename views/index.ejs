<div class="container">
  <h1 class="text-center">The Original 151 Pokemon</h1>
  <p class="text-center">
    <a href="/pokemon">Favorites</a>
  </p>

  <% pokemon.forEach(function(pokemon) { %>
    <div class="well">
      <% let name = pokemon.name.replace(pokemon.name.charAt(0), pokemon.name.charAt(0).toUpperCase()) %>
      <h2><%= name %></h2>
      <form method="POST" action="/pokemon">
        <input hidden type="text" name="name" value="<%= name %>">
        <button class="btn btn-primary" type="submit">Add <%= name %> Favorite Pokemon</button>
      </form>
    </div>
  <% }); %>
</div>
